<% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <main>
      <ul class="collection z-depth-3" style="width: 80%">
    <li class="collection-item avatar" style="background-color: rgba(255, 255, 255, .6)">
    <i class="material-icons prefix">account_circle</i>
      <span class="title" style="font-size: 2em"><%= user.username %></span>
